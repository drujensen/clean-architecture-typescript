{
  "name": "clean-architecture-monorepo",
  "version": "1.0.0",
  "description": "Mono-repo for Clean Architecture Backend and React Frontend",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "npm run --workspaces build",
    "test": "npm run --workspaces test",
    "lint": "npm run --workspaces lint",
    "dev:backend": "npm run --workspace=backend dev",
    "install:all": "npm install"
  },
  "devDependencies": {
    "typescript": "^5.5.3"
  }
}